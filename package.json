{
  "name": "uikit-react",
  "version": "3.0.20",
  "description": "UIkit components for use in React.",
  "repository": "https://github.com/vacarsu/uikit-react",
  "homepage": "https://vacarsu.github.io/uikit-react",
  "main": "./lib/uikit-react.js",
  "module": "./lib/uikit-react.js",
  "scripts": {
    "build": "rollup -c",
    "test": "jest --coverage --json --outputFile=coverage/coverage.json",
    "test-update": "jest --updateSnapshot",
    "test-watch": "jest --watchAll",
    "build-storybook": "build-storybook",
    "storybook": "start-storybook -p 6006 -c .storybook",
    "lint": "tslint -c tslint.json \"src/**/*.ts\"",
    "lint:fix": "tslint --fix -c tslint.json \"src/**/*.ts\"",
    "precommit": "lint-staged"
  },
  "author": "Alex Lopez",
  "license": "ISC",
  "peerDependencies": {
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "uikit": "^3.0.0-rc.5"
  },
  "devDependencies": {
    "@storybook/addon-info": "^3.4.8",
    "@storybook/addon-knobs": "^3.4.8",
    "@storybook/addon-options": "^3.4.8",
    "@storybook/react": "4.0.0-alpha.3",
    "@types/classnames": "^2.2.7",
    "@types/enzyme": "^3.9.1",
    "@types/he": "^1.1.0",
    "@types/marked": "^0.6.3",
    "@types/prismjs": "^1.16.0",
    "@types/react": "^16.8.10",
    "@types/react-dom": "^16.8.3",
    "awesome-typescript-loader": "^5.2.1",
    "codecov": "^3.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "he": "^1.2.0",
    "husky": "^1.3.1",
    "identity-obj-proxy": "^3.0.0",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "react": "^16.8.6",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-dom": "^16.8.6",
    "react-jsx-parser": "^1.15.1",
    "react-router-dom": "^4.3.1",
    "react-test-renderer": "^16.8.6",
    "rimraf": "^2.6.3",
    "rollup": "^1.7.4",
    "rollup-plugin-commonjs": "^9.2.2",
    "rollup-plugin-css-only": "^1.0.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-typescript2": "^0.20.1",
    "storybook-addon-jsx": "^5.3.0",
    "ts-loader": "^5.3.3",
    "tslint": "^5.14.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^2.9.1",
    "uglify-es": "^3.3.9",
    "uikit": "^3.0.3"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "@types/jest": "^23.3.0",
    "jest": "^23.4.1",
    "ts-jest": "^23.0.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,tsx}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,tsx}"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
